@model WebApplication1.Models.Restaurant

@{
    ViewData["Title"] = "Editer";
}

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NoteEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label">Dernière Visite</label>
                <input asp-for="note.DateLastVisite" class="form-control" required/>
                <span asp-validation-for="note.DateLastVisite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Note</label>
                <input min="0" max="20" asp-for="note.note" class="form-control" required/>
                <span asp-validation-for="note.note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Commentaire</label>
                <textarea MaxLength="255" asp-for="note.CommentaireNote" class="form-control" required></textarea>
                <span asp-validation-for="note.CommentaireNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NoteIndex">Retour à liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


