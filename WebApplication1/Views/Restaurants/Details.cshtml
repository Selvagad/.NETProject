@model WebApplication1.Models.Restaurant

@{
    ViewData["Title"] = "Détails";
}

<h1>Détails</h1>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            Téléphone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numtel)
        </dd>
        <dt class="col-sm-2">
            Cuisine
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commentaire)
        </dd>
        <dt class="col-sm-2">
            Adresse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.address.Rue) @Html.DisplayFor(model => model.address.Ville) @Html.DisplayFor(model => model.address.CodePostal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editer</a> |
    <a asp-action="Index">Retour à la liste</a>
</div>
